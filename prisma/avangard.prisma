generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Player {
    id Int @id @default(autoincrement())

    name String

    createdAt DateTime  @default(now())
    updatedAt DateTime?

    events Event[]

    @@map("players")
}

model Event {
    uuid String   @id @default(uuid())
    date DateTime

    players Player[]

    @@map("events")
}

model Profile {
    uuid       String  @id @default(uuid())
    rttf_score Int?
    rttf_link  String?
}
