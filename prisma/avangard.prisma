generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Player {
    id Int @id @default(autoincrement())

    name         String
    rttf_score   Int?
    rttf_profile String? @unique

    createdAt DateTime  @default(now())
    updatedAt DateTime?

    events Event[]

    @@map("players")
}

model Event {
    uuid String   @id @default(uuid())
    date DateTime

    players Player[]

    @@map("events")
}
